<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1F1F1"
    tools:context="com.example.admin.quizapplication.MainActivity">

   <!-- <ImageView android:src="@drawable/pic1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />-->


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fast mind for High IQs"
        android:textSize="32sp"
        android:textColor="#01579B"
        android:gravity="center_horizontal"
        android:id="@+id/textureView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="430dp">

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Take Quiz"
            android:background="#01579B"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:onClick="takeQuiz"
        />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="Quit Quiz"
            android:layout_margin="5dp"
            android:background="#01579B"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textAllCaps="false"
        />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="15dp"
        android:padding="15dp">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movies"
            android:textSize="35sp"
            android:textColor="#01579B"
            android:paddingLeft="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="15dp"/>


        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Music"
            android:textSize="35sp"
            android:textColor="#01579B"
            android:paddingLeft="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="15dp"/>


        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Geeks"
            android:textSize="35sp"
            android:textColor="#01579B"
            android:paddingLeft="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="15dp"/>

        </RadioGroup>


    </LinearLayout>

</RelativeLayout>
</ScrollView>